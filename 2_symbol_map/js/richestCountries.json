{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple bar chart with embedded data.",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/RichBren/Vis2/main/2_symbol_map/data/richest_countries.csv"
    },
    "params": [
      
      {
        "name": "Top",
        "value": 10,
        "bind": {
          "input": "range",
          "min": 1,
          "max": 10,
          "step": 1,
          "name": "Top Richest Countries "
        }
      }
    ],
    "layer": [
      {
        "params": [{"name": "hover", "select": {"type": "point", "on": "mouseover"}}],
        "transform": [
          {"calculate": "toNumber(datum['gdp_per_capita'])", "as": "num_rank"},
          {
            
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "num_rank", "order": "descending"}]
          },
          {"filter": "datum.rank <= Top"}
        ],
        "mark": {"type": "bar", "size": 7,"stroke":"#263e4b"},
        "encoding": {
          "x": {"field": "gdp_per_capita", "type": "quantitative"},
          "y": {
            "field": "country",
            "type": "nominal",
            "axis": {"labelAngle": 0},
            "sort": {
              "field": "gdp_per_capita",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {
            "field": "country",
          "type": "nominal",
          "scale": {
            "domain": [
              "Luxembourg",
              "Singapore",
              "Ireland",
              "Qatar",
              "Bermuda",
              "Norway",
              "Switzerland",
              "Macao",
              "United States",
              "Brunei"
            ],
            "range": [
              "#BAB0A7",
              "#B07AA1",
              "#E15759",
              "#F28E2B",
              "#FF9DA7",
              "#EDC948",
              "#B565A7",
              "#9C755F",
              "#BC8F8F",
              "#4E79A7"
            ]
          },"legend":null
          },
          "opacity": {"value": 1},
          "strokeWidth": {
            "condition": [{"param": "hover", "empty": false, "value": 2}],
            "value": 0.2
          },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {"field": "gdp_per_capita", "type": "quantitative", "title": "GDP per Capita"},
              {"field": "rank", "type": "quantitative", "title": "Rank"}
            ]
        }
      }
    ],"background":"#F5E8C7"
  }